<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="?android:windowBackground"
    android:layout_height="match_parent" tools:context=".ImageCapture">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/buttonGallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:text="Browse Pictures"
            android:textSize="30sp"
            android:padding="10dp"
            android:textColor="@color/text_white"
            android:background="@color/heading_color"
            android:onClick="loadImageFromGallery"/>

        <TextView
            android:id="@+id/buttonLoadPicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Snap A Photo"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_above="@id/buttonGallery"
            android:textColor="@color/text_white"
            android:background="@color/heading_color"
            android:onClick="snapAPicture"/>

    </RelativeLayout>
</FrameLayout>