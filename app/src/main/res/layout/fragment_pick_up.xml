<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="?android:windowBackground"
    android:layout_height="match_parent" tools:context=".PickUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pickupHeading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:text="PICK UP"
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="@color/text_white"
            android:background="@color/heading_color"/>

        <EditText
            android:id="@+id/sname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Name"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/sflatNo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Flat No. / House No."
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/sApartmentName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Apartment / Locality Name"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/sCity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="City"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/sState"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="State"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/sZipCode"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Postal Code"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/sphoneno"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Contact Number"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/snext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="BACK"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="backFromPickUp"/>

            <TextView
                android:id="@+id/sback"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="NEXT"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="nextFromPickUp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>