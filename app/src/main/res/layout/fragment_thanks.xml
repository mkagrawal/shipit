<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".ThanksFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/thanksText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:gravity="center"
            android:text="@string/thanks_text"
            android:textSize="20sp"
            android:padding="5dp"
            android:background="@color/heading_color"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newRequestButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:text="NEW REQUEST"
                android:textSize="30sp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="goNewRequestFromThanks"/>

            <TextView
                android:id="@+id/homeButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:text="TRACK REQUESTS"
                android:textSize="30sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="goTrackFromThanks"/>

            <TextView
                android:id="@+id/historyButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:gravity="center"
                android:text="EXIT"
                android:textSize="30sp"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="exitFromThanks"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>