<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="?android:windowBackground"
    android:layout_height="match_parent" tools:context=".PickUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/destinationHeading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:text="Destination"
            android:textSize="25dp"
            android:padding="10dp"
            android:textColor="@color/text_white"
            android:background="@color/heading_color"/>

        <EditText
            android:id="@+id/dname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Name"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/dflatNo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Flat No. / House No."
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/dApartmentName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Apartment / Locality Name"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/dCity"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="City"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/dState"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="State"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/dZipCode"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Postal Code"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <primstudios.com.shipit.CustomComponents.MyCustomEditText
            android:id="@+id/dphoneno"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:hint="Contact Number"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            android:padding="10dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dnext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="BACK"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="backFromDestination"/>

            <TextView
                android:id="@+id/dback"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:text="NEXT"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="nextFromDestination"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>