<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context=".ConfirmationFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/finalcapturedImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:layout_marginTop="10dp"/>

        <LinearLayout android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:layout_marginTop="2dp">

            <LinearLayout android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/pickUpCofirmationHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PickUp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/text_white"
                    android:background="@color/heading_color"/>

                <TextView
                    android:id="@+id/pickUpConfirmationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Abhishek Gangwal, 704, ABC Road, Jaipur"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:textColor="@color/text_white"
                    android:background="@color/heading_color"/>
            </LinearLayout>


            <LinearLayout android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp">

                <TextView
                    android:id="@+id/destinationCofirmationHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Destination"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:textColor="@color/text_white"
                    android:background="@color/heading_color"/>

                <TextView
                    android:id="@+id/destinationConfirmationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Abhishek Gangwal, 704, ABC Road, Bangalore"
                    android:textSize="15sp"
                    android:padding="20dp"
                    android:textColor="@color/text_white"
                    android:background="@color/heading_color"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:background="@color/heading_color">

            <TextView
                android:id="@+id/shipingOptionHeader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Shipping Options"
                android:textSize="20sp"
                android:textColor="@color/text_white"/>

            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="2dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/shipingOptionDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Default: Standard"
                    android:textSize="20sp"
                    android:textColor="@color/text_white"
                    android:background="@color/heading_color"/>

                <Button
                    android:id="@+id/shippingDetailsChange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:onClick="changeShippingDetails"
                    android:text="Change"/>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/confirmButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CONFIRM"
                android:textSize="30sp"
                android:textColor="@color/text_white"
                android:background="@color/heading_color"
                android:onClick="onConfirm"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>